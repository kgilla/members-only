<div class="row">
  <h2>New Post</h2><br />
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %><br />

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %><br />

      <%= f.submit "Make Post", class: "btn btn-primary" %><br />
    <% end %>

  </div>
</div>