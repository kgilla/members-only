<% provide(:button_text, 'Create my account') %>
<% provide(:form_path, signup_path) %>
<h1>Join The Cause</h1><br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: yield(:form_path)) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %><br />

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %><br />

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %><br />

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %><br />

    <%= f.submit yield(:button_text), class: "btn btn-primary" %><br />
<% end %>
  </div>
</div>